<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 离线模块专属薰衣草紫背景 -->
    <corners android:radius="16dp" />
    <solid android:color="@color/offline_card" />
    
    <!-- 渐变效果 -->
    <gradient
        android:angle="135"
        android:startColor="@color/lavender_light"
        android:endColor="@color/lavender_dark"
        android:type="linear" />
    
    <!-- 轻微边框 -->
    <stroke
        android:width="2dp"
        android:color="@color/lavender_light" />
    
</shape>
