<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fairy_tale"
    tools:context=".ChildReadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 顶部标题栏 - 童话书店入口 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/card_children_rounded"
            android:elevation="6dp"
            android:layout_margin="12dp">

            <!-- 返回按钮 - 小恐龙Palo挥手 -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👋 回去"
                android:background="@drawable/button_children_primary"
                android:textColor="@color/text_white_soft"
                android:textSize="14sp"
                android:padding="12dp" />

            <!-- 标题 - 童话书店 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📚 童话书店"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/sky_blue_dark"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- 游戏化分类 - 卡通徽章 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/transparent">

            <!-- 3-6岁 - 小熊抱着绘本徽章 -->
            <Button
                android:id="@+id/btnAge3to6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🐻 3-6岁"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_children_primary"
                android:textColor="@color/text_white_soft"
                android:textSize="12sp"
                android:padding="8dp" />

            <!-- 7-9岁 - 小兔子背书包徽章 -->
            <Button
                android:id="@+id/btnAge7to9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🐰 7-9岁"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/reading_card_background"
                android:textColor="@color/text_white_soft"
                android:textSize="12sp"
                android:padding="8dp" />

            <!-- 10-12岁 - 小狐狸戴眼镜徽章 -->
            <Button
                android:id="@+id/btnAge10to12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🦊 10-12岁"
                android:layout_marginStart="8dp"
                android:background="@drawable/task_card_background"
                android:textColor="@color/text_white_soft"
                android:textSize="12sp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- 书籍列表 - 立体+场景化绘本卡片 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 示例书籍卡片 - 微立体浮雕效果 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp"
                    android:layout_marginBottom="16dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/card_children_rounded">

                        <!-- 立体绘本封面 -->
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:id="@+id/ivBookCover"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_book"
                                android:background="@drawable/reading_card_background"
                                android:padding="20dp"
                                android:contentDescription="小王子封面"
                                android:elevation="4dp" />

                            <!-- AR功能标签 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🦕 会动哦！"
                                android:textSize="8sp"
                                android:textColor="@color/sky_blue"
                                android:background="@color/background_card_soft"
                                android:padding="2dp"
                                android:layout_alignTop="@id/ivBookCover"
                                android:layout_alignEnd="@id/ivBookCover"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小王子"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_soft" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="一个关于友谊和成长的美丽故事"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary_soft"
                                android:layout_marginTop="4dp" />

                            <!-- 趣味标签组合 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🐻 适合3-6岁"
                                    android:textSize="10sp"
                                    android:textColor="@color/pink"
                                    android:background="@color/background_card_soft"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🏆 有闯关！"
                                    android:textSize="10sp"
                                    android:textColor="@color/warm_orange"
                                    android:background="@color/background_card_soft"
                                    android:padding="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 下载状态图标 -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:contentDescription="已下载"
                            android:tint="@color/success_soft" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 第二本书 - 三只小猪 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp"
                    android:layout_marginBottom="16dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/card_children_rounded">

                        <!-- 立体绘本封面 -->
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:id="@+id/ivBookCover2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_book"
                                android:background="@drawable/scan_card_background"
                                android:padding="20dp"
                                android:contentDescription="三只小猪封面"
                                android:elevation="4dp" />

                            <!-- 离线功能标签 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="☁️ 没网也能读！"
                                android:textSize="8sp"
                                android:textColor="@color/mint_green"
                                android:background="@color/background_card_soft"
                                android:padding="2dp"
                                android:layout_alignTop="@id/ivBookCover2"
                                android:layout_alignEnd="@id/ivBookCover2"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="三只小猪"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_soft" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="三只小猪建房子的有趣故事"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary_soft"
                                android:layout_marginTop="4dp" />

                            <!-- 趣味标签组合 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🐰 适合7-9岁"
                                    android:textSize="10sp"
                                    android:textColor="@color/sky_blue"
                                    android:background="@color/background_card_soft"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="📖 经典故事"
                                    android:textSize="10sp"
                                    android:textColor="@color/lavender"
                                    android:background="@color/background_card_soft"
                                    android:padding="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 下载状态图标 -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:contentDescription="已下载"
                            android:tint="@color/success_soft" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 底部推荐栏 - 小恐龙Palo举着推荐绘本的小牌子 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/reward_card_background"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <!-- 小恐龙Palo -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dragon"
                        android:contentDescription="小恐龙Palo"
                        android:tint="@color/text_white_soft"
                        android:layout_marginEnd="12dp" />

                    <!-- 推荐文字 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Palo觉得《Green Eggs and Ham》超有趣！一起来读吧～"
                        android:textSize="14sp"
                        android:textColor="@color/text_white_soft"
                        android:textStyle="bold" />

                    <!-- 推荐按钮 -->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去看看"
                        android:background="@drawable/button_children_primary"
                        android:textColor="@color/text_white_soft"
                        android:textSize="12sp"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


