<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fairy_tale"
    tools:context=".BookPlaybackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 顶部标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:background="@drawable/card_children_rounded"
            android:elevation="6dp"
            android:layout_margin="12dp">

            <!-- 返回按钮 -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👋 返回"
                android:background="@drawable/button_children_primary"
                android:textColor="@color/text_white_soft"
                android:textSize="14sp"
                android:padding="12dp" />

            <!-- 标题 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📖 绘本播放"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/sky_blue_dark"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- 绘本信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_children_rounded"
            android:layout_margin="12dp"
            android:gravity="center_vertical">

            <!-- 绘本封面 -->
            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_2"
                android:background="@drawable/reading_card_background"
                android:padding="12dp"
                android:contentDescription="绘本封面"
                android:layout_marginEnd="16dp" />

            <!-- 绘本信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小王子"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_soft" />

                <TextView
                    android:id="@+id/tvPageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第 1 页 / 共 10 页"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_soft"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 故事内容区域 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 故事文本 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/card_children_rounded">

                        <TextView
                            android:id="@+id/tvStoryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="从前有一个小王子，他住在一个很小的星球上..."
                            android:textSize="18sp"
                            android:textColor="@color/text_primary_soft"
                            android:lineSpacingExtra="8dp"
                            android:fontFamily="serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <!-- 播放控制区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_children_rounded"
            android:layout_margin="12dp">

            <!-- 进度条 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_soft"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progressTint="@color/sky_blue"
                    android:layout_marginHorizontal="8dp" />

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:45"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_soft"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 控制按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- 上一页 -->
                <ImageButton
                    android:id="@+id/btnPreviousPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_previous"
                    android:background="@drawable/button_children_primary"
                    android:contentDescription="上一页"
                    android:layout_marginEnd="16dp" />

                <!-- 播放/暂停 -->
                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/button_children_primary"
                    android:contentDescription="播放/暂停"
                    android:layout_marginHorizontal="16dp" />

                <!-- 下一页 -->
                <ImageButton
                    android:id="@+id/btnNextPage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_next"
                    android:background="@drawable/button_children_primary"
                    android:contentDescription="下一页"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <!-- 辅助控制按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <!-- 重复播放 -->
                <ImageButton
                    android:id="@+id/btnRepeat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_repeat"
                    android:background="@drawable/button_secondary"
                    android:contentDescription="重复当前页"
                    android:layout_marginEnd="24dp" />

                <!-- 播放速度 -->
                <ImageButton
                    android:id="@+id/btnSpeed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_speed"
                    android:background="@drawable/button_secondary"
                    android:contentDescription="播放速度"
                    android:layout_marginStart="24dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
